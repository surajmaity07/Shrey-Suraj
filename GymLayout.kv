                root.manager.current = 'SignupScreen'

<SignupScreen>:
    GridLayout:
        cols: 1
        canvas.before:
            Color:
                rgb: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Fill the details correctly in order to successfully register."
                size_hint : 0.9, 0.9
                pos_hint : {"x": 0.45, "top": 0.9}
                font_size: 20
        BoxLayout:
            orientation: "horizontal"   
            Label:
                text: "First Name"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.45, "top": 0.7}
            TextInput: 
                multiline:False
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.65, "top": 0.7}
            Label:
                text: "Last Name"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.65, "top": 0.7}
            TextInput: 
                multiline:False
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.65, "top": 0.7}
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Email Id"
                    size_hint : 0.7, 0.2
                    pos_hint : {"x": 0.45, "top": 1.2}
                TextInput: 
                    multiline:False
                    size_hint : 0.7, 0.2
                    pos_hint : {"x": 0.65, "top": 1.2}
                Label:
                    text: "Contact Number"
                    size_hint : 0.7, 0.2
                    pos_hint : {"x": 0.45, "top": 1.2}
                TextInput: 
                    multiline:False
                    size_hint : 0.7, 0.2
                    pos_hint : {"x": 0.65, "top": 1.2}
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Date of Birth  \n (DOB)"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.25, "top": 1.5}
            TextInput: 
                multiline:False
                size_hint : 0.9, 0.2
                pos_hint : {"x": 0.45, "top": 1.5}
            Label:
                text: "State"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.25, "top": 1.5}
            TextInput: 
                multiline:False
                size_hint : 0.9, 0.2
                pos_hint : {"x": 0.35, "top": 1.5}
            Label:
                text: "City / District"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.25, "top": 1.5}
            TextInput:
                multiline:False
                size_hint : 0.9, 0.2
                pos_hint : {"x": 0.45, "top": 1.5}
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Address"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.1, "top": 1.9}
            TextInput: 
                multiline: True
                size_hint : 1.5, 0.2
                pos_hint : {"x": 0.2, "top": 1.9}
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Create Password"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.25, "top": 2.4}
            TextInput: 
                multiline:False
                size_hint : 0.9, 0.2
                pos_hint : {"x": 0.45, "top": 2.4}
            Label:
                text: "Confirm Password"
                size_hint : 0.7, 0.2
                pos_hint : {"x": 0.25, "top": 2.4}
            TextInput: 
                multiline:False
                size_hint : 0.9, 0.2
                pos_hint : {"x": 0.35, "top": 2.4}
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Sign Up"
                width: 20
                font_size: 28
                size_hint : 0.4, 0.4
                pos_hint : {"x": 0.1, "top": 2.7}
                on_press : 
                    print("Now we will be creating new account!")
                    root.manager.current = 'MainMenu'

<MainMenu>:
    MDScreen:
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                #for the navigation menu
                    MDTopAppBar:
                        title: 'Navigation'
                        elivation: 4
                        pos_hint: {'x' : .00007, 'y' : .9}
                        size_hint_x: 0.25
                        size_hint_y: 0.1
                        left_action_items:[['menu', lambda x:nav_drawer.set_state("open")]]
            MDNavigationDrawer:
                id: nav_drawer
                canvas:
                    Color:
                        rgba: 0.555, 0.555, 0.555, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDNavigationDrawerMenu:
                    MDNavigationDrawerHeader:
                        title: "Sudama-Krishna"
                        text: "Exploring Nature"
                        spacing: "4dp"
                        padding: "12dp", 0, 0, "32dp"
                    DrawerClickableItem:
                        icon: "mango_tree.jpg"
                        text: "Profile"
                        md_bg_color: 0,0,0,1
                    DrawerClickableItem:
                        icon: "mango_tree.jpg"
                        text: "View Your Journey"
                        md_bg_color: 0,0,0,1
                    DrawerClickableItem:
                        icon: "mango_tree.jpg"
                        text: "Wallet & Transactions"
                        md_bg_color: 0,0,0,1
                    DrawerClickableItem:
                        icon: "mango_tree.jpg"
                        text: "Share"
                        md_bg_color: 0,0,0,1
                    DrawerClickableItem:
                        icon: "mango_tree.jpg"
                        text: "Rate"
                        md_bg_color: 0,0,0,1
    GridLayout:
        rows : 2
        MDScreen:
            GridLayout:
                cols : 2
                canvas:
                    Color:
                        rgb: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: 'Live Training Sessions'
                    background_normal: '1.jpg'
                    outline_color: 0, 0.5, 0.5, 1
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'Live_TrainingScreen'
                Button:
                    text: 'EMS'
                    background_normal: '2.jpg'
                    outline_color: 0, 0.5, 0.5, 1
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'EMSScreen'
                Button:
                    text: 'Trainers and Gym'
                    background_normal: '3.jpg'
                    outline_color: 0, 0.5, 0.5, 1
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'TrainerScreen'
                Button:
                    text: 'Nutrion and Supplements'
                    background_normal: '4.jpg'
                    outline_color: 0, 0.5, 0.5, 1
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'NutritionScreen'
            Button:
                text: 'Next'
                outline_color: 0, 0.5, 0.5, 1
                size_hint: (1, None)
                font_size: 30
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'MuscleTarget'
            MDNavigationLayout:
                MDScreenManager:
                    MDScreen:
                    #for the navigation menu
                        MDTopAppBar:
                            title: 'Navigation'
                            elivation: 4
                            pos_hint: {'x' : .00007, 'y' : .9}
                            size_hint_x: 0.25
                            size_hint_y: 0.1
                            left_action_items:[['menu', lambda x:nav_drawer.set_state("open")]]
                MDNavigationDrawer:
                    id: nav_drawer
                    canvas:
                        Color:
                            rgba: 0.555, 0.555, 0.555, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDNavigationDrawerMenu:
                        MDNavigationDrawerHeader:
                            title: "The Gym App"
                            spacing: "4dp"
                            padding: "12dp", 0, 0, "32dp"
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "Profile"
                            md_bg_color: 0,0,0,1
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "View Your Journey"
                            md_bg_color: 0,0,0,1
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "Wallet & Transactions"
                            md_bg_color: 0,0,0,1
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "Rate"
                            md_bg_color: 0,0,0,1
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "Share"
                            md_bg_color: 0,0,0,1
                        DrawerClickableItem:
                            icon: "mango_tree.jpg"
                            text: "Help & Support"
                            md_bg_color: 0,0,0,1

