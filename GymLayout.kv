#:kivy 1.9.9 

<DrawerClickableItem@MDNavigationDrawerItem>
<DrawerLabelItem@MDNavigationDrawerItem>

<FirstScreen>:
    GridLayout:
        cols: 1
        Label:
            canvas.before:
                Color:
                    rgb: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "1st introductory part..."
        Button:
            text: 'Next'
            on_press: root.manager.current = 'screen2'
        Button:
            text: "Skip"
            on_press: 
                print("It's for skip")
                root.manager.current = 'MainMenu'
<SecondScreen>:
    GridLayout:
        cols: 1
        Label:
            canvas.before:
                Color:
                    rgb: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "2nd introductory part..."
        Button:
            text: 'Next'
            on_press: root.manager.current = 'screen3'
        Button:
            text: "Skip"
            on_press: 
                print("It's for skip")
                root.manager.current = 'login'
<ThirdScreen>:
    GridLayout:
        cols: 1
        Label:
            canvas.before:
                Color:
                    rgb: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "3rd introductory part..."
        Button:
            text: "Skip"
            on_press: 
                print("It's for skip")
                root.manager.current = 'login'
<LoginScreen>:
    GridLayout: 
        id:login_page
        name: 'login_p'
        manager: 'login_page'
        cols : 1
        GridLayout:
            cols : 2
            Label:
                canvas.before:
                    Color:
                        rgb: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: "Username"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.5, "top": 0.9}
            TextInput: 
                id:username
                multiline:False
                size_hint : 0.3, 0.1
                pos_hint : {"x": 0.45, "top": 0.9}
            Label:
                text: "Password"
                canvas.before:
                    Color:
                        rgb: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.25, "top": 0.9}
            TextInput: 
                id:password
                multiline:False
                size_hint : 0.3, 0.1
                pos_hint : {"x": 0.45, "top": 0.9}
        Button:
            text: "Login"
            size_hint_x : None
            width: 10
            font_size: 32
            size_hint : 0.4, 0.4
            on_press : print("Login Successful!")
        Label:
            text: " Or "
            size_hint_x : None
            font_size: 15
            width: 5
            size_hint : 0.2, 0.1
            canvas.before:
                Color:
                    rgb: 0.4, 0.4, 0.4, 1
                Rectangle:
                    pos: self.pos
                    size: self.size     
        Button:
            text: "Create New Account"
            size_hint_x : None
            width: 10
            font_size: 28
            size_hint : 0.4, 0.4
            on_press : 
                print("Now we will be creating new account!")
                root.manager.current = 'QuestionScreen'
        Label:
            text: " "
            canvas.before:
                Color:
                    rgb: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

<QuestionScreen>:
    GridLayout: 
        cols: 1
        id: questions
        canvas.before:
