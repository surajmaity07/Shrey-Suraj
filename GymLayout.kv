        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Diet-Plan"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 1}
            CheckBox:
                on_active: print("Check Box Clicked for Diet-Plan!")
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 1}
            Label:
                text: "Weight Loss"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.65, "top": 1}
            CheckBox:
                on_active: print("Check Box Clicked for Weight Loss!")
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.65, "top": 1}
            Label:
                text: "Weight Gain"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.85, "top": 1}
            CheckBox:
                on_active: print("Check Box Clicked for Weight Gain!")
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.85, "top": 1}
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Muscle Gain"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 1.5}
            CheckBox:
                on_active: print("Check Box Clicked for Muscle Gain!")
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 1.5}
            Label:
                text: "Home Workout"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.65, "top": 1.5}
            CheckBox:
                on_active: print("Check Box Clicked for Home Workout!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.65, "top": 1.5}
            Label:
                text: "Count Calories"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.85, "top": 1.5}
            CheckBox:
                on_active: print("Check Box Clicked for Count Calories!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.85, "top": 1.5}
        BoxLayout:
            orientation: "horizontal"   
            Label:
                text: "Coach Guidance"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 2}
            CheckBox:
                on_active: print("Check Box Clicked for Coach Guidance!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.45, "top": 2}
            Label:
                text: "Health Motivation"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.65, "top": 2}
            CheckBox:
                on_active: print("Check Box Clicked for Health Motivation!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.65, "top": 2}
            Label:
                text: "Improve Stamina"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.85, "top": 2}
            CheckBox:
                on_active: print("Check Box Clicked for Improve Stamina!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.85, "top": 2} 
        Button:
            text: "Next"
            size_hint_x : None
            width: 10
            font_size: 28
            size_hint : 0.4, 0.4
            on_press : 
                print("Now we will be proceeding!")
                root.manager.current = 'QuestionScreen2'               
        
<QuestionScreen2>:
    GridLayout: 
        cols: 1
        canvas.before:
            Color:
                rgb: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size  
        Label:
            text: "What is your Gender?"
            font_size: 20          
        BoxLayout:
            orientation: "horizontal"   
            Label:
                text: "Male"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.45, "top": 1.3}
            CheckBox:
                on_active: print("Check Box Clicked for Male!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.45, "top": 1.3}
            Label:
                text: "Female"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.65, "top": 1.3}
            CheckBox:
                on_active: print("Check Box Clicked for Female!")
                size_hint : 0.2, 0.1  
                pos_hint : {"x": 0.65, "top": 1.3}
            Label:
                text: "Others"
                size_hint : 0.2, 0.1
                pos_hint : {"x": 0.85, "top": 1.3}
