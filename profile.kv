#:kivy 1.9.9 

Screen:
    name: "profile"
    MDFloatLayout:
        bg_color: rgba(246, 250, 255, 255)
        ProfileScreen:
            size_hint_y: .65
            pos_hint: {"center_y": .7}
            elevation: 6
            bg_color: 1, 1, 1, 1
            radius: (0, 0, 20, 20)
            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"center_y": .91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(71, 92, 119, 255)
            MDIconButton:
                icon: "dots-vertical"
                pos_hint: {"center_x": .93, "center_y": .91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(71, 92, 119, 255)
            Label:
                text: "My Profile"
                font_name: "BPoppins"
                font_size: "20sp"
                pos_hint: {"center_x": .56, "center_y": .82}
                halign: "center"
                color: rgba(188, 202, 228, 255)
            Image:
                source: "profile_pic.png"
